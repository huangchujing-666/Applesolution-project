<section id="member">
<div class="container">
    <div class="row col-md-12" style="outline:1px solid #dddddd; min-height:60px">
        
            <div class="col-md-4 col-xs-12">
               <h3>用户: @Model.MemberName</h3>
            </div>
            <div class="col-md-4 col-xs-6">
               <h3>會員等級: @Model.MemberInfo.memberlevel</h3>
