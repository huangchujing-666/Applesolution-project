            </div>
            <div class="col-md-6 col-xs-12" style="min-height:40px">
               <input type="text" name="quantity" id="quantity" class="input3 uppercase" maxlength="2" />
            </div>
            <div class="col-md-12 col-xs-12" style="min-height:60px">
               <input type="image" id="btn_submit" name="btn_submit" src="@Url.Content("~/Content/images/jifen_btn.jpg")" alt="加入積分" title="加入積分" /><span class="loading"><img src="@Url.Content("~/Content/images/loading.gif")" alt="" /></span>
            </div>
              
            </form>
    </div>
</div>
</section>

